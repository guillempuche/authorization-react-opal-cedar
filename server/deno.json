{
  "tasks": {
    "start": "deno run --unstable-hmr --allow-net --allow-read --allow-env mod.ts",
    "debug": "deno run --unstable-hmr --inspect --allow-net --allow-read --allow-env mod.ts"
  },
  "fmt": {
    "useTabs": true,
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  }
}